<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.home.PostDetailsActivity"
    android:orientation="vertical"
    android:id="@+id/PostDetails">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layoutDirection="rtl">

        <TableLayout>

            <TableRow>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/postOwnerPhoto"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/photo"
                    app:civ_circle_background_color="@android:color/white"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000"/>
                <TableLayout
                    android:weightSum="2">
                    <TableRow
                        android:layout_weight="1">
                        <TextView
                        android:id="@+id/UserName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:layout_marginRight="15dp" />
                    </TableRow>
                    <TableRow
                        android:layout_weight="1">
                        <TextView
                            android:id="@+id/UserCountry"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="10dp"
                            android:text=""
                            android:textColor="#000000"
                            android:textSize="20dp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="20dp"
                            android:textColor="#000000"
                            android:layout_marginRight="15dp"/>
                        <TextView
                            android:id="@+id/UserGovernorate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="20dp"
                            android:textColor="#000000"
                            android:layout_marginRight="15dp"/>
                    </TableRow>
                </TableLayout>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="اسم المشروع :"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/ProjectName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20dp"
                    android:textColor="#000000"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="التصنيف :"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/ProjectCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="#000000"/>
            </TableRow>
            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="العملة التجارية :"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="#000000"/>
            </TableRow>
        </TableLayout>

    </TableLayout>


</ScrollView>