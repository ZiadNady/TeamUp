<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_margin="15dp"
    android:background="@drawable/post"
    app:cardElevation="6dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/post_color"
    android:id="@+id/cardview">


    <LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_background"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layoutDirection="ltr">
            <TextView
                android:id="@+id/PostReleaseDateDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layoutDirection="ltr"
                android:text="تاريخ النشر :"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/layout_background"
            android:paddingTop="5dp"
            android:id="@+id/layoutColor">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layoutDirection="rtl"
                android:layout_marginBottom="5dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ownerImageInPost"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/photo"
                    app:civ_circle_background_color="@android:color/white"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:layout_marginRight="15dp" />
                    <LinearLayout
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layoutDirection="rtl"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/UserCountryInPost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="20dp"
                            android:textColor="#000000"
                            android:layout_marginRight="10dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="20dp"
                            android:textColor="#000000"
                            android:layout_marginRight="15dp"/>
                        <TextView
                            android:id="@+id/UserTeratoryInPost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="20dp"
                            android:textColor="#000000"
                            android:layout_marginRight="15dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="اسم المشروع :"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:paddingRight="5dp"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/ProjectNameInPost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20dp"
                    android:textColor="#000000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="التصنيف :"
                    android:paddingRight="5dp"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/ProjectCategoryInPost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="#000000"/>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/Locaion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="مكان المشروع :"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:paddingRight="5dp"
                    android:textColor="#000000"/>
                <LinearLayout
                    android:layout_marginRight="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/ProjectPlaceCountryInPost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:layout_marginRight="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:layout_marginRight="15dp"/>
                    <TextView
                        android:id="@+id/ProjectPlaceTeratoryInPost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="20dp"
                        android:textColor="#000000"
                        android:layout_marginRight="15dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="وصف المشروع :"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:paddingRight="5dp"
                    android:textColor="#000000"/>
                <TextView
                    android:id="@+id/ProjectDiscriptionInPost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:singleLine="true"/>
                <!--                android:background="@drawable/square_text"-->
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layoutDirection="rtl">
                <TextView
                    android:id="@+id/numberOfPartners"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:paddingRight="5dp"
                    android:textSize="20dp"
                    android:textColor="#000000"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:orientation="horizontal"
            android:layoutDirection="rtl"
            android:layout_margin="15dp">
            <ImageButton
                android:id="@+id/remove"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:visibility="visible"
                android:background="#ffffff"
                android:src="@drawable/ic_close_black_24dp"/>
            <ImageButton
                android:layout_weight="1"
                android:id="@+id/share"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/ic_menu_share"
                android:layout_marginRight="20dp"
                android:text="مشاركة"
                android:textStyle="bold"
                android:background="#ffffff"
                android:textColor="#000000"/>
        </LinearLayout>
        <Button
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="15dp"
            android:background="#ffffff"
            android:text="التفاصيل"
            android:textSize="24dp"
            android:textStyle="bold"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>